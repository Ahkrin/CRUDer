@{
    ViewBag.Title = "Home Page";
}

@section scripts
{
    <script src="~/Scripts/Home/Index.js"></script>        
}
<header class="container">
</header>

<section class="container" id="vm">
    <section>
        <div class="group">
            <section class="col-1-3">
                <div class="form-group">
                    <label for="title">タイトル</label>
                    <input type="text" id="title"  />
                </div>
                <div class="form-group">
                    <label for="article">文章内容</label>
                    <input type="text" id="article" />
                </div>
            </section>
            <section class="col-1-3">
                <div class="form-group">
                    <label for="postYear">投稿年</label>
                    <input type="text" id="postYear" />
                </div>
                <div class="form-group">
                    <label for="postMonth">投稿月</label>
                    <input type="text" id="postMonth"/>
                </div>
            </section>
            <section class="col-1-3">
                <div class="form-group">
                    <label for="author">著者</label>
                    <input type="text" id="author" />
                </div>
            </section>
        </div>
        <section>
            <a id="btnSearch" class="btn btn-alt" v-on:click="evtSearch">検索</a>
        </section>
    </section>
    <section v-if="recs.length !== 0">
        <table border="1" width="100%" id="recs">
            <tr>
                <td>{{dtlHeader.Title}}</td>
                <td>{{dtlHeader.PostTime}}</td>
                <td>{{dtlHeader.LastUpdatedTime}}</td>
                <td>{{dtlHeader.Author}}</td>
            </tr>
            <tr v-for="rec in recs">
                <td>{{rec.Title}}</td>
                <td>{{rec.PostTime | dateToYYYYMMDD}}</td>
                <td>{{rec.LastUpdatedTime | dateToYYYYMMDD}}</td>
                <td>{{rec.Author}}</td>
            </tr>
        </table>
    </section>
</section>

<footer>
</footer>