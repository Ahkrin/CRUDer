@{
    ViewBag.Title = "Home Page";
}

@section scripts
{
    <script src="~/Scripts/Home/Index.js"></script>        
}
<header class="container">
</header>

<section class="container" id="vapp">
    <section>
        <div class="group">
            <section class="col-1-3">
                <div class="form-group">
                    <label for="title">タイトル</label>
                    <input type="text" id="title"  />
                </div>
                <div class="form-group">
                    <label for="article">文章内容</label>
                    <input type="text" id="article" />
                </div>
            </section>
            <section class="col-1-3">
                <div class="form-group">
                    <label for="postYear">投稿年</label>
                    <input type="text" id="postYear" />
                </div>
                <div class="form-group">
                    <label for="postMonth">投稿月</label>
                    <input type="text" id="postMonth"/>
                </div>
            </section>
            <section class="col-1-3">
                <div class="form-group">
                    <label for="author">著者</label>
                    <input type="text" id="author" />
                </div>
            </section>
        </div>
        <section>
            <a id="btnSearch" class="btn btn-alt">検索</a>
        </section>
    </section>
    <section>
        <table border="1" width="100%" id="detailList">
            <tr>
                <td>タイトル</td>
                <td>投稿年月</td>
                <td>最後の訪れ</td>
                <td>著者</td>
            </tr>
            <tr v-for="detail in detailList">
                <td>{{detail.Title}}</td>
                <td>{{detail.PostTime}}</td>
                <td>{{detail.LastUpdatedTime}}</td>
                <td>{{detail.Author}}</td>
            </tr>
        </table>
    </section>
</section>

<footer>
</footer>